{
  "name": "orbital-db",
  "productName": "Orbital DB",
  "version": "0.1.0",
  "description": "Desktop client for DuckDB databases",
  "main": "out/main/main.js",
  "author": {
    "name": "Jamie Ontiveros",
    "email": "dev@ontiveros.me"
  },
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package": "electron-vite build && electron-builder --publish never",
    "package:mac": "electron-vite build && electron-builder --mac --publish never",
    "package:win": "electron-vite build && electron-builder --win --publish never",
    "package:linux": "electron-vite build && electron-builder --linux --publish never",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "typecheck:main": "tsc --noEmit --project tsconfig.node.json",
    "typecheck:renderer": "tsc --noEmit --project tsconfig.web.json",
    "typecheck": "npm run typecheck:main && npm run typecheck:renderer",
    "postinstall": "electron-rebuild -f -w @duckdb/node-api"
  },
  "dependencies": {
    "@duckdb/node-api": "^1.4.2-r.1",
    "@reduxjs/toolkit": "^2.2.0",
    "dotenv": "^16.6.1",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.22.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@monaco-editor/react": "^4.6.0",
    "@tanstack/react-table": "^8.13.0",
    "@tanstack/react-virtual": "^3.2.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.17",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.0",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.0"
  },
  "build": {
    "appId": "com.orbitaldb.app",
    "productName": "Orbital DB",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "out/**/*",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,HISTORY.md,CHANGES.md}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples,docs,doc}",
      "!**/node_modules/*/{*.d.ts.map,*.js.map}",
      "!**/node_modules/.bin",
      "!**/node_modules/**/*.{md,markdown,txt,license,LICENSE}",
      "!**/{.eslintrc,.prettierrc,.editorconfig,.npmignore,.gitignore,.github,.vscode}",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}"
    ],
    "asarUnpack": [
      "node_modules/@duckdb/**/*"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
